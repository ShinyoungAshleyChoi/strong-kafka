# API Settings
APP_NAME=Health Stack Kafka Gateway
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=3000

# SSL Settings (set to true to enable HTTPS)
SSL_ENABLED=false
SSL_CERTFILE=./certs/cert.pem
SSL_KEYFILE=./certs/key.pem

# Kafka Settings
KAFKA_BROKERS=localhost:19092,localhost:19093,localhost:19094
KAFKA_TOPIC=health-data-raw
KAFKA_DLQ_TOPIC=health-data-dlq
KAFKA_CLIENT_ID=health-stack-gateway

# Schema Registry Settings
SCHEMA_REGISTRY_URL=http://localhost:8081

# Logging
LOG_LEVEL=INFO
